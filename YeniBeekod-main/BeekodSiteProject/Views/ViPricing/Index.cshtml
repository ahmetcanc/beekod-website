@model List<BeekodSiteProject.Models.Pricing>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ViewLayout.cshtml";
}
@if (TempData["Message"] != null)
{
    <script src="~/Content/AdminPanel/plugins/sweetalert2/sweetalert2.all.js"></script>
    <script src="~/Content/AdminPanel/plugins/sweetalert2/sweetalert2.all.min.js"></script>
    <script src="~/Content/AdminPanel/docs/assets/plugins/jquery/jquery.js"></script>
    <script>

            Swal.fire({
                icon: 'success',
                title: 'Başarılı',
                confirmButtonText: 'Tamam',
                text: '@Html.Raw(TempData["Message"])'
            });
    </script>
}


<div class="page-in">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 pull-left"><div class="page-in-name">Fiyatlandırma</div></div>
            <div class="col-lg-6 pull-right"><div class="page-in-bread"><span>Buradasınız:</span> <a href="@Url.Action("index","vipricing")">Fiyatlandırma</a></div></div>
        </div>
    </div>
</div>

<div class="container marg75">
    <div class="row">
        <div class="col-lg-12">
            <div class="promo-block">
                <div class="promo-text">Fiyatlandırma Tablosu</div>
                <div class="center-line"></div>
            </div>
        </div>
    </div>
</div>
<div class="container marg50" style="margin-bottom: 50px;">
    <div class="row">

        @foreach (var item in Model)
        {
<div class="col-lg-4 col-sm-4 col4-box">
    <div class="plan" style="margin-right: 0px;">
        <div class="plan-head">
            <h3>@item.Title</h3>
            <div class="price">@item.Price</div>
        </div>
        <ul>
            <li><b>@item.Ozellik1</b></li>
            <li><b>@item.Ozellik2</b></li>
            <li><b>@item.Ozellik3</b></li>
            <li><b>@item.Ozellik4</b></li>
            <li><b>@item.Ozellik5</b></li>
            <li><b>@item.Ozellik6</b></li>
        </ul>
        <div class="signup"><button class="btn btn-price" data-toggle="modal" data-target="#form">Get Started</button></div>
       
    <div class="signup">
        <button class="btn btn-success" data-toggle="collapse" href="#collapseExample" onclick="bindTable(@item.Id)" role="button" aria-expanded="false" aria-controls="collapseExample"><i class="revicon-down-open"></i></button>      
    </div>
    </div>
</div>
           
        }





    </div>
    </div>

<div id="myTable">
    <div class="collapse" id="collapseExample">
        <div class="container">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="row">#</th>
                        <th scope="row">First</th>
                        <th scope="row">Last</th>
                        <th scope="row">Handle</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">SEO</th>
                        <td>Mark</td>
                        <td>Otto</td>
                        <td>Otto</td>

                    </tr>
                    <tr>
                        <th scope="row">2</th>
                        <td></td>
                        <td>Thornton</td>
                        <td>Thornton</td>

                    </tr>
                    <tr>
                        <th scope="row">3</th>
                        <td><i class="fa-solid icon-cancel"></i></td>
                        <td><i class="fa-solid icon-cancel"></i></td>
                        <td>the Bird</td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>
    @* Burası açılır kapanır model *@
    <div class="modal fade" id="form" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content" style="margin-top: 171px;">
                <div class="modal-header border-bottom-0">
                    <h5 class="modal-title" id="exampleModalLabel">Bize Ulaşın</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form method="post" action="@Url.Action("Index","ViPricing")">
                    <div class="modal-body">
                        <div class="form-group">
                            <input type="email" class="form-control" name="Emails" id="Emails" aria-describedby="emailHelp" placeholder="E Mail Adresi">

                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="Adsoyad" id="Adsoyad" placeholder="İsim Soyisim">
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" name="Mesaj" id="Mesaj" placeholder="Telefon">

                        </div>
                    </div>
                    <div class="modal-footer border-top-0 d-flex justify-content-center">
                        <button type="submit" class="btn btn-success">Gönder</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

